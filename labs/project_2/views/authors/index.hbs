<h1>My Favorite Authors</h1>

<ol>
    {{#each authors}}
    <li>
        <h1><a href="/authors/{{this.id}}">{{this.fullName}}</a></h1>
        <h3>{{this.country}}</h3>
        <p>{{this.book_title}}, {{this.publication_year}}</p>
    </li>
    {{/each}}
</ol>
<a href="/authors/new" class="btn btn-default">Create a New Author</a>